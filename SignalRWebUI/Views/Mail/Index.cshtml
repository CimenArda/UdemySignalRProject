@using SignalRWebUI.Dtos.MailDto
@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title"></h4>
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Profil Ayarları</div>
					</div>
					<div class="card-body">
						<form method="post">
							<div class="form-group">
								<label for="Name">Alıcı Mail Adresi</label>
								<input type="text" class="form-control" asp-for="ReceiverMail" id="ReceiverMail">

							</div>
							<div class="form-group">
								<label for="SurName">Konu</label>
								<input type="text" class="form-control" asp-for="Subject" id="Subject">

							</div>
							<div class="form-group">
								<label for="SurName">Mesajınız</label>
							<textarea rows="5" asp-for="Body" id="Body" class="form-control"></textarea>
							</div>



							<button class="btn btn-success">Maili İlet</button>
							<a href="/Statistic/Index/" class="btn btn-danger">İptal Et</a>

						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
