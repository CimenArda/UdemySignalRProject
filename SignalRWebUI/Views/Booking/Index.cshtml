@using SignalRWebUI.Dtos.BookingDto
@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<div class="content">
    <div class="container-fluid">
		<script type="text/javascript">


			$(document).ready(() => {
				var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7191/SignalRHub").build();
				$("#connstatus").text(connection.state);


				connection.start().then(() => {

					$("#connstatus").text(connection.state);

					setInterval(() => {
                        connection.invoke("GetBookingList");
				




					}, 1000);
				}).catch((err) => {
					console.log(err)
				});

                connection.on("ReceiveGetBookingList", (value20) => {
					$("#getbookinglist").text(value20);
				});

			





			});







		</script>
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Rezervasyon Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Rezervasyon İle İlgili İşlemler Aşağıdan Yapılmaktadır.
                        </div>

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Misafir Adı-Soyadı</th>
                                    <th scope="col">Telefon Numarası</th>
                                    <th scope="col">Mail Adresi</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Tarih</th>

                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>


                                        <td>@item.Name</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.PersonCount</td>
                                        <td>@item.Date</td>

                                        <td><a href="/Booking/DeleteBooking/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Booking/UpdateBooking/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/Booking/AddBooking/" class="btn btn-primary">Rezervasyon Ekle</a></td>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
