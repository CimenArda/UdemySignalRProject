@using SignalRWebUI.Dtos.SocialMediaDto
@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">SosyalMedya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">SosyalMedya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            SosyalMedya İle İlgili İşlemler Aşağıdan Yapılmaktadır.
                        </div>

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Sosyal Medya Url</th>
                                    <th scope="col">Sosyal Medya İkonu</th>

                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>

                                        <td><a href="/SocialMedia/DeleteSocialMedia/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/SocialMedia/UpdateSocialMedia/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/SocialMedia/AddSocialMedia/" class="btn btn-primary">SosyalMedya Ekle</a></td>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
