@using SignalRWebUI.Dtos.TestimonialDto
@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Refarans Yorumu İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Refarans Yorumu  Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Refarans Yorumu  İle İlgili İşlemler Aşağıdan Yapılmaktadır.
                        </div>

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Referans Adı</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Durum</th>

                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>
                                        <td>@item.Status</td>
                                        <td>@item.Comment</td>


                                        <td><a href="/Testimonial/DeleteTestimonial/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Testimonial/UpdateTestimonial/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/Testimonial/AddTestimonial/" class="btn btn-primary">Referans Ekle</a></td>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

