@using SignalRWebUI.Dtos.CategoryDto
@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateCategory</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Form</h4>
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Güncelleme</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="ID" />
							<div class="form-group">
								<label for="text">Kategori Adı</label>
								<input type="text" asp-for="Name" class="form-control">

							</div>

							<div class="form-group">
								<label for="text">Durum</label>
								<input type="text" class="form-control" asp-for="Status">

							</div>

							<button class="btn btn-success">Güncelle</button>
							<a href="/Category/Index/" class="btn btn-danger">İptal Et</a>

						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>


