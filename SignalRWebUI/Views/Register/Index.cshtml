@using SignalRWebUI.Dtos.IdentityDto
@model RegisterDto

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Admin Paneli</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce1.jpg" style="height:584px;width:484;" alt="form">
			</div>
			<form class="form-detail" asp-controller="Register" asp-action="Index" method="post">
				<h2>Yeni Kullanıcı Kaydı</h2>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" placeholder="Adınız" asp-for="Name" required>
				</div>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" placeholder="Soyadınız" asp-for="SurName" required>
				</div>
				<div class="form-row">
					<input type="text"  id="full-name" class="input-text" placeholder="Kullanıcı Adınız" asp-for="UserName" required>
				</div>
				<div class="form-row">
					<input type="text"  id="your-email" class="input-text" placeholder="Email Adresiniz" asp-for="Mail" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-row">
					<input type="password"  id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
				</div>
				
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>