@using SignalRWebUI.Dtos.DiscountDto
@model CreateDiscountDto
@{
    ViewData["Title"] = "AddDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title"></h4>
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İndirimli Ürün Ekleme</div>
					</div>
					<div class="card-body">
						<form method="post">
							<div class="form-group">
								<label for="text">İndirimli Ürün Adı</label>
								<input type="text" asp-for="Title" class="form-control">

							</div>

							<div class="form-group">
								<label for="text">İndirimli Ürün Oranı</label>
								<input type="text" class="form-control" asp-for="Amount">

							</div>
							<div class="form-group">
								<label for="text">İndirimli Ürün Görseli</label>
								<input type="text" class="form-control" asp-for="ImageUrl">

							</div>
							<div class="form-group">
								<label for="text">İndirimli Ürün Açıklaması</label>
								<input type="text" class="form-control" asp-for="Description">

							</div>

							<button class="btn btn-success">Ekle</button>
							<a href="/Discount/Index/" class="btn btn-danger">İptal Et</a>

						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
