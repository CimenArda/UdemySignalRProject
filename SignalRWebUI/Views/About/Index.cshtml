@using SignalRWebUI.Dtos.AboutDto
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımda İle İlgili İşlemler Aşağıdan Yapılmaktadır.
                        </div>

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Resim Yolu</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        
                                        <td>@item.Title</td>
                                        <td>@item.ImageUrl</td>
                                        <td>@item.Description</td>
                                        <td><a href="/About/DeleteAbout/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@item.ID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <td><a href="/About/AddAbout/" class="btn btn-primary">Hakkımda Ekle</a></td>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

