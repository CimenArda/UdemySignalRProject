@using SignalRWebUI.Dtos.ContactDto
@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title"></h4>
		<div class="row">

			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sayfanın alt kısmındaki iletişim güncelleme işlemi burdan yapılmaktadır.</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="ID" />
							<div class="form-group">
								<label for="text">Lokasyon</label>
								<input type="text" asp-for="Location" class="form-control">

							</div>

							<div class="form-group">
								<label for="text">Telefon Numarası</label>
								<input type="text" class="form-control" asp-for="PhoneNumber">

							</div>
							<div class="form-group">
								<label for="text">Mail Adresi</label>
								<input type="text" class="form-control" asp-for="Mail">

							</div>
							<div class="form-group">
								<label for="text">Açıklama</label>
								<input type="text" class="form-control" asp-for="FooterDesctiption">

							</div>

							<button class="btn btn-success">Güncelle</button>
							<a href="/Contact/Index/" class="btn btn-danger">İptal Et</a>

						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>
